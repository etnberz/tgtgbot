# EditorConfig is awesome: https://EditorConfig.org
# This file is not intended for python files (handled by black and the linters) but more for all the other files

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.{yaml,yml,json}]
indent_size = 2
